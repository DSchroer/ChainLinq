<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Schroer.ChainLinq</PackageId>
    <Title>ChainLinq</Title>
    <Description>ChainLinq is a library for connecting Linq IQueryables with other tools such as API' and libraries.</Description>
    <Version>0.1.0</Version>
    <Authors>Dominick Schroer</Authors>
    <RepositoryUrl>https://github.com/DSchroer/ChainLinq</RepositoryUrl>
    <PackageTags>Linq;IQueryable;IQueryProvider</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)"/>
  </ItemGroup>

</Project>
